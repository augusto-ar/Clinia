<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <script src="~/Scripts/Sweetalert2.all.min.js"></script>
</head>
<body>
    @if (ViewBag.Mensagem != null)
    {
        <script>
        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: '@ViewBag.Mensagem',
        });
        </script>
    }

    <div class="loginform">
        @using (Html.BeginForm("FazerLogin", "Login", FormMethod.Post))
        {
            <!-- Avatar Image -->
            <div class="avatar">
                <img src="https://raw.githubusercontent.com/azouaoui-med/pro-sidebar-template/gh-pages/src/img/user.jpg" alt="Avatar">
            </div>
            <p>Usuario</p>
            <input type="text" name="Login" placeholder="Informe o usuario">
            <p>Senha</p>
            <input type="password" name="Password" placeholder="Informe a senha">
            <input type="submit" name="login-btn" value="Entra">
        }
    </div>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: arial;
            background-color: #f1f1f1
        }

        .loginform {
            background: #ffffff;
            width: 450px;
            color: #26758d;
            top: 50%;
            left: 50%;
            position: absolute;
            transform: translate(-50%,-50%);
            box-sizing: border-box;
            padding: 40px 30px;
            border-radius: 20px;
            box-shadow: 0px 10px 29px 0px #e0e0e0;
        }

            .loginform p {
                margin: 0;
                padding: 0;
                font-weight: bold;
            }

            .loginform h2 {
                font-size: 30px;
                margin: 30px 0px;
                text-transform: uppercase;
                font-weight: normal;
                text-align: center;
            }

            .loginform input {
                width: 100%;
                margin-bottom: 30px;
            }

        .avatar {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            overflow: hidden;
            margin: 0 auto;
            top: -55px;
            left: 0px;
            right: 0px;
        }

            .avatar img {
                width: 100%;
                height: auto;
            }

        .loginform input[type="text"], input[type="password"] {
            border: none;
            border-bottom: 1px solid #1e5220;
            background: transparent;
            outline: none;
            height: 40px;
            color: #333;
            font-size: 16px;
        }

        .loginform input[type="submit"] {
            background: #0a66c2;
            color: #fff;
            font-size: 20px;
            padding: 7px 15px;
            border-radius: 20px;
            transition: 0.4s;
            border: none;
        }

            .loginform input[type="submit"]:hover {
                cursor: pointer;
                background: #4788e9;
            }

        .loginform a {
            text-decoration: none;
            font-size: 15px;
            line-height: 20px;
            color: #1e5220;
        }

        .loginform .have-not {
            float: right;
        }

        .loginform a:hover {
            color: #4caf50;
        }

        /*-- Responsive CSS --*/
        @@media(max-width: 576px) {
            .loginform {
                width: 90%;
            }

                .loginform a {
                    display: block;
                    text-align: center;
                    float: inherit !important;
                    margin: 10px 0px;
                }
        }
    </style>
</body>
</html>